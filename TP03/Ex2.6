#!/bin/bash


if [ $# -eq 0 ]; then
echo "Escolha uma diretoria"
read  d
for i in $d; do
X=`find $i -name ficha* -printf "%s "`
		
		for i in $X;
		do
			soma=0
			let "soma = soma + $i"
		done
	
	done


else
	for j in $*; do
		X=`find $j -name ficha* -printf "%s "`
		
		for i in $X;
		do
			soma=0
			let "soma = soma + $i"
		done
	
	done

fi

echo "Tamanho total $*: $soma"
